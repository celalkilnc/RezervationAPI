{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Data Source=localhost;Initial Catalog=TourVisioSiteClone;Integrated Security=True;TrustServerCertificate=True",
    "LogServer": "Data Source=localhost;Initial Catalog=TourVisioSiteClone;Integrated Security=True;TrustServerCertificate=True"
  },
  "Mail": {
    "Host": "smtp.gmail.com",
    "Port": "587"
  },
  "Santsg": {
    "TokenService": "/api/authenticationservice/login",
    "GetArrivalAutoComp": "/api/productservice/getarrivalautocomplete",
    "PriceSearch": "/api/productservice/pricesearch",
    "GetProductInfo": "/api/productservice/getproductInfo",
    "GetOffers": "/api/productservice/getoffers"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File",
        "Args": {
          "path": "/logs/log.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
