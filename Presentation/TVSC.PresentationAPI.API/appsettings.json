{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Data Source=localhost;Initial Catalog=TourVisioSiteClone;Integrated Security=True;TrustServerCertificate=True"
  },
  "Mail": {
    "Host": "smtp.gmail.com",
    "Port": "587"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "../logs/logs.txt",
          "rollingInterval": "Day"
        }

      }
    ]
  }
}
